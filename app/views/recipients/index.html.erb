<p id="notice"><%= notice %></p>

<h1>Listing Recipients</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipients.each do |recipient| %>
      <tr>
        <td><%= recipient.first_name %></td>
        <td><%= link_to 'Show', recipient %></td>
        <td><%= link_to 'Edit', edit_recipient_path(recipient) %></td>
        <td><%= link_to 'Destroy', recipient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipient', new_recipient_path %>


<% "Recipient List" %>

<div id="recipients">
<% for recipient in @recipients %>
  <div class="recipent">
    <p>
      <strong><%=h recipient.first_name %></strong>
      <%= link_to "Add Present", baskets_path(:present_id => recipient), :method => :post %>
      <div class="clear"></div>
    </p>
  </div>
<% end %>
</div>
